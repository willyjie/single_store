<!-- app/view/comments/index.html.erb -->
<div class="max-w-3xl mx-auto mt-8">
  <div class="flex justify-between items-baseline mb-6">
    <h1 class="text-3xl text-gray-900">Sources</h1>
    <%= link_to 'New Comment', new_source_path, class: "text-blue-600" %>
  </div>
  <div class="flex flex-col items-baseline space-y-6 p-4 shadow-lg rounded">
    <% @sources.each do |source| %>
      <%= render "source", source: source %>
    <% end %>
  </div>
</div>